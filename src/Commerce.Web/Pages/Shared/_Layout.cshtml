@{
    var title = ViewData["Title"] as string ?? "Luxe Threads";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="container header__row">
            <a class="brand" asp-page="/Index">
                <span class="brand__mark"></span>
                <span class="brand__name">Luxe Threads</span>
            </a>

            <div class="search">
                <span class="search__icon">⌕</span>
                <input class="search__input" type="search" placeholder="Search hoodies, tees, jackets…" />
                <button class="search__btn" type="button">Search</button>
            </div>

            <nav class="actions">
                <a class="iconbtn" href="#" aria-label="Account">👤</a>
                <a class="iconbtn" href="#" aria-label="Wishlist">♡</a>
                <a class="iconbtn iconbtn--cart" href="#" aria-label="Cart">
                    🛒
                    <span class="badge">2</span>
                </a>
            </nav>
        </div>

        <div class="container header__cats">
            <!-- Category toolbar -->
            <a class="pill pill--active" href="#">All</a>
            <a class="pill" href="#">New</a>
            <a class="pill" href="#">Hoodies</a>
            <a class="pill" href="#">Tees</a>
            <a class="pill" href="#">Jackets</a>
            <a class="pill" href="#">Pants</a>
            <a class="pill" href="#">Accessories</a>

            <div class="spacer"></div>

            <a class="pill pill--deal" href="#">Hot Deals</a>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container footer__row">
            <div>
                <div class="footer__brand">Luxe Threads</div>
                <div class="muted">Modern essentials. Built to last.</div>
            </div>
            <div class="footer__links">
                <a href="#">Shipping</a>
                <a href="#">Returns</a>
                <a href="#">Contact</a>
                <a href="#">Privacy</a>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
