@page
@{
    ViewData["Title"] = "Luxe Threads — Home";
}

<section class="container hero">
    <div class="hero__card">
        <div class="hero__top">
            <span class="chip">New drop</span>
            <span class="chip chip--ghost">Free shipping $75+</span>
        </div>

        <h1 class="hero__title">Premium basics. <span class="grad">Street-ready.</span></h1>
        <p class="hero__sub">
            Clean cuts, heavy fabrics, and the kind of fit you keep reaching for.
        </p>

        <div class="hero__cta">
            <a class="btn btn--primary" href="#">Shop New This Week</a>
            <a class="btn btn--ghost" href="#">Browse Categories</a>
        </div>

        <div class="hero__stats">
            <div class="stat">
                <div class="stat__k">2–3 days</div>
                <div class="stat__l">Delivery (avg)</div>
            </div>
            <div class="stat">
                <div class="stat__k">Easy</div>
                <div class="stat__l">Returns</div>
            </div>
            <div class="stat">
                <div class="stat__k">Top</div>
                <div class="stat__l">Rated fits</div>
            </div>
        </div>
    </div>

    <div class="hero__image">
        <!-- Placeholder “image” block — swap for a real photo later -->
        <div class="imgcard">
            <div class="imgcard__shine"></div>
            <div class="imgcard__label">
                <div class="imgcard__title">Winter Capsule</div>
                <div class="muted">Oversized hoodies + utility jackets</div>
            </div>
        </div>
    </div>
</section>

<section class="container section">
    <div class="section__head">
        <h2>New This Week</h2>
        <a class="link" href="#">View all →</a>
    </div>

    <div class="grid">
        @for (int i = 1; i <= 8; i++)
        {
            <article class="card">
                <div class="card__media">
                    <span class="tag">NEW</span>
                    <div class="ph"></div>
                </div>

                <div class="card__body">
                    <div class="card__title">Essential Tee @i</div>
                    <div class="card__meta muted">Soft cotton • Relaxed fit</div>

                    <div class="card__row">
                        <div class="price">$@(24 + i).99</div>
                        <button class="btn btn--tiny" type="button">Add</button>
                    </div>
                </div>
            </article>
        }
    </div>
</section>

<section class="container section">
    <div class="section__head">
        <h2>Hot Deals</h2>
        <a class="link" href="#">Shop deals →</a>
    </div>

    <div class="deals">
        <div class="deal">
            <div class="deal__badge">-35%</div>
            <div class="deal__title">Heavyweight Hoodie</div>
            <div class="muted">Limited colors • While supplies last</div>
            <div class="deal__row">
                <div class="price">
                    <span class="strike">$89.00</span>
                    <span>$57.85</span>
                </div>
                <a class="btn btn--primary" href="#">Grab deal</a>
            </div>
        </div>

        <div class="deal deal--alt">
            <div class="deal__badge">Bundle</div>
            <div class="deal__title">2 Tees + 1 Cap</div>
            <div class="muted">Build your fit and save</div>
            <div class="deal__row">
                <div class="price">
                    <span class="strike">$74.00</span>
                    <span>$59.00</span>
                </div>
                <a class="btn btn--ghost" href="#">Build bundle</a>
            </div>
        </div>
    </div>
</section>

<section class="container section">
    <div class="banner">
        <div>
            <h3>Members get early access</h3>
            <div class="muted">Drop alerts, exclusive deals, and restocks.</div>
        </div>
        <div class="banner__cta">
            <input class="banner__input" type="email" placeholder="you@email.com" />
            <button class="btn btn--primary" type="button">Join</button>
        </div>
    </div>
</section>
